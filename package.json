{
  "name": "pyweb2025_task2.2",
  "version": "1.0.0",
  "description": "Кастомизация статического сайта (шаблонизация, сборка статики: HTML, CSS, JS)",
  "main": "index.js",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "serve": "serve",
    "dev": "mkdocs serve",
    "prod": "npm run build && serve site",
    "build:html": "html-minifier-terser --input-dir site --output-dir site --file-ext html --remove-comments --collapse-whitespace",
    "build:css": "postcss theme/style.css --use autoprefixer --use cssnano --no-map --output site/style.css",
    "validate:html": "html-validate site --ext=html --max-warnings=0",
    "build": "mkdocs build && npm run build:html && npm run build:css && npm run validate:html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/miirld/pyweb2025_task2.2.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/miirld/pyweb2025_task2.2/issues"
  },
  "homepage": "https://github.com/miirld/pyweb2025_task2.2#readme",
  "dependencies": {
    "serve": "^14.2.5"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.23",
    "copyfiles": "^2.4.1",
    "cssnano": "^7.1.2",
    "html-minifier-terser": "^7.2.0",
    "html-validate": "^10.5.0",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1"
  }
}
